@page
@model AspNetCoreDemo.Pages.Books.ListModel

@{
    ViewData["Title"] = "List Books";
    Layout = "/Pages/Shared/_Books_Layout.cshtml";
}

<h1>List Books</h1>
 

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Books) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.Price
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" 
                     onclick="return confirm('Do you want to delete this book?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
